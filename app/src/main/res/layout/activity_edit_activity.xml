<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_activity">

    <EditText
        android:id="@+id/itemm_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Name"/>

    <EditText
        android:id="@+id/itemm_description"
        android:layout_below="@id/itemm_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Description"
        />
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_below="@id/itemm_description"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/price"
        android:layout_below="@id/itemm_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/itemm_price"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="4"
            android:layout_marginTop="16dp"
            android:hint="price"
            android:text="0"
            android:editable="false"/>
        <Button
            android:id="@+id/plus1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+"
            />
        <Button
            android:id="@+id/minus1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="-"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_quantity"
        android:layout_width="wrap_content"
        android:layout_below="@id/price"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_below="@id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/itemm_quantity"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="2"
        android:editable="false"/>
        <Button
            android:id="@+id/plus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="-"
            />
</LinearLayout>



</RelativeLayout>